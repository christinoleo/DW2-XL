	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "${fileDirname}",
			// "cwd": "${workspaceFolderBasename}"
		},
		{
			"name": "Replace",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "cmd/replace/main.go",
			"output": "${workspaceFolder}/replace.exe",
			"cwd": "${workspaceFolder}",
			"args": [
				"-target",
				"XL/ShipHulls_Dhayut.xml",
				"-script",
				"renamehulls.txt"
			]
		},
		{
			"name": "XML",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "cmd/xml/main.go",
			"output": "${workspaceFolder}/xml.exe",
			"cwd": "${workspaceFolder}",
			"args": [
				"-source",
				"XL/ShipHulls_Dhayut.xml",
				"-target",
				"temp/ShipHulls_Dhayut.xml"
			]
		}
	]
}